# DevPod Environment Variables
# This file contains environment variables specific to DevPod deployments

# DevPod Specific Settings
DEVPOD_DEVELOPMENT_ENVIRONMENT=True
DEVPOD_CONTAINER_NAME=djangobasev2-dev

# Django Settings (DevPod Optimized)
DJANGO_SETTINGS_MODULE=core.settings
SECRET_KEY=devpod-secret-key-for-development-only-change-in-production
DEBUG=True
ALLOWED_HOSTS=0.0.0.0,localhost,127.0.0.1

# Database Configuration (PostgreSQL from docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/djangobasev2_dev
DB_NAME=djangobasev2_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Cache Configuration (Redis from docker-compose)
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# Email Configuration (Mailhog from docker-compose)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False

# Static and Media Files (DevPod paths)
STATIC_URL=/static/
STATIC_ROOT=/workspaces/djangobasev2/blogapp/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/workspaces/djangobasev2/blogapp/media

# Security Settings (relaxed for DevPod development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Django Allauth Configuration (DevPod optimized)
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_AUTHENTICATION_METHOD=email
ACCOUNT_EMAIL_VERIFICATION=optional  # Disabled for easier DevPod development
ACCOUNT_UNIQUE_EMAIL=True
ACCOUNT_SIGNUP_PASSWORD_ENTER_TWICE=True
ACCOUNT_ADAPTER=allauth.account.adapter.DefaultAccountAdapter

# Site Configuration
SITE_ID=1
SITE_NAME=DjangoBaseV2 DevPod
SITE_DOMAIN=localhost

# Session Configuration (DevPod friendly)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=86400  # 24 hours

# Logging Configuration (DevPod paths)
LOG_LEVEL=INFO
LOG_FILE=/tmp/django.log  # Use /tmp for DevPod compatibility
CONSOLE_LOGGING=True

# Development Tools (enhanced for DevPod)
DEBUG_TOOLBAR=True
ENABLE_DJANGO_EXTENSIONS=True

# Celery Configuration (Redis from docker-compose)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Elasticsearch Configuration (from docker-compose)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=djangobasev2_devpod

# MinIO S3 Configuration (from docker-compose)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=django-dev-pod-bucket
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_CUSTOM_DOMAIN=localhost:9000
AWS_S3_REGION_NAME=us-east-1

# Stripe Configuration (DevPod test keys)
STRIPE_PUBLIC_KEY=pk_test_devpod_1234567890abcdef
STRIPE_SECRET_KEY=sk_test_devpod_1234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_devpod_1234567890abcdef
STRIPE_PRICE_ID=price_devpod_1234567890abcdef

# DevPod Development Mode Flags
DEVELOPMENT_MODE=True
DEVPOD_MODE=True
MAINTENANCE_MODE=False
BETA_MODE=False

# Feature Flags (DevPod optimized)
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False  # Disabled for easier DevPod development
ENABLE_SOCIAL_LOGIN=False
ENABLE_PAYMENTS=True  # Enabled for testing Stripe integration
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=False

# Performance Settings (DevPod optimized)
CONN_MAX_AGE=60
USE_SELECT_RELATED=True
USE_PREFETCH_RELATED=True

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# File Upload Settings (DevPod friendly)
FILE_UPLOAD_MAX_MEMORY_SIZE=26214400  # 25MB
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB
UPLOAD_FILE_MAX_SIZE=10485760  # 10MB

# DevPod Specific
PYTHONPATH=/workspaces/djangobasev2/blogapp
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1