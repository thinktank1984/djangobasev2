# Django Development Environment Variables
# This file is used for development environment configuration

# Django Settings
DJANGO_SETTINGS_MODULE=core.settings
SECRET_KEY=django-insecure-development-key-change-this-in-production-super-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (using PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/djangobasev2_dev
DB_NAME=djangobasev2_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# Email Configuration (Mailhog for development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/workspaces/djangobasev2/blogapp/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/workspaces/djangobasev2/blogapp/media

# Security Settings (relaxed for development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Django Allauth Configuration
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_AUTHENTICATION_METHOD=email
ACCOUNT_EMAIL_VERIFICATION=optional  # Disabled for easier development
ACCOUNT_UNIQUE_EMAIL=True
ACCOUNT_SIGNUP_PASSWORD_ENTER_TWICE=True
ACCOUNT_ADAPTER=allauth.account.adapter.DefaultAccountAdapter

# Site Configuration
SITE_ID=1
SITE_NAME=DjangoBaseV2
SITE_DOMAIN=localhost

# Session Configuration
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=86400  # 24 hours

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/workspaces/djangobasev2/blogapp/logs/django.log

# Stripe Configuration (test keys - replace with your own)
STRIPE_PUBLIC_KEY=pk_test_51234567890abcdef
STRIPE_SECRET_KEY=sk_test_51234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_test_51234567890abcdef
STRIPE_PRICE_ID=price_test_51234567890abcdef

# Development Tools
DEBUG_TOOLBAR=True

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=djangobasev2

# Development Mode Flags
DEVELOPMENT_MODE=True
MAINTENANCE_MODE=False
BETA_MODE=False

# Feature Flags
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False  # Disabled for easier development
ENABLE_SOCIAL_LOGIN=False
ENABLE_PAYMENTS=False
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=False

# Performance Settings
CONN_MAX_AGE=60
USE_SELECT_RELATED=True
USE_PREFETCH_RELATED=True

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=26214400  # 25MB
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB
UPLOAD_FILE_MAX_SIZE=10485760  # 10MB