# Django Development Environment Variables
# Copy this file to .env and customize for your environment

# Django Settings
DJANGO_SETTINGS_MODULE=core.settings
SECRET_KEY=django-insecure-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/djangobasev2_dev
DB_NAME=djangobasev2_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# SQLite Configuration (fallback)
# DATABASE_URL=sqlite:///blogapp/db.sqlite3

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# Email Configuration (Mailhog for development)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/workspaces/djangobasev2/blogapp/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/workspaces/djangobasev2/blogapp/media

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Django Allauth Configuration
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_AUTHENTICATION_METHOD=email
ACCOUNT_EMAIL_VERIFICATION=optional  # Use 'mandatory' in production
ACCOUNT_UNIQUE_EMAIL=True
ACCOUNT_SIGNUP_PASSWORD_ENTER_TWICE=True
ACCOUNT_ADAPTER=allauth.account.adapter.DefaultAccountAdapter

# Site Configuration
SITE_ID=1
SITE_NAME=DjangoBaseV2
SITE_DOMAIN=localhost

# Session Configuration
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=86400  # 24 hours

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/workspaces/djangobasev2/blogapp/logs/django.log

# Stripe Configuration (if using payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here

# Third-party API Keys (if needed)
# API_KEY_GOOGLE=your_google_api_key
# API_KEY_TWITTER=your_twitter_api_key
# API_KEY_FACEBOOK=your_facebook_api_key

# Development Tools
# Enable Django Debug Toolbar in development
DEBUG_TOOLBAR=True

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Elasticsearch Configuration (if using search)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=djangobasev2

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name
AWS_S3_REGION_NAME=us-east-1

# Development Mode Flags
DEVELOPMENT_MODE=True
MAINTENANCE_MODE=False
BETA_MODE=False

# Feature Flags
ENABLE_USER_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False  # Set to False for easier development
ENABLE_SOCIAL_LOGIN=False
ENABLE_PAYMENTS=False
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=False

# Performance Settings
CONN_MAX_AGE=60  # Database connection pooling
USE_SELECT_RELATED=True
USE_PREFETCH_RELATED=True

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=26214400  # 25MB
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB
UPLOAD_FILE_MAX_SIZE=10485760  # 10MB